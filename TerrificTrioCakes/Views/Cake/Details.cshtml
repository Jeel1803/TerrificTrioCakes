@model TerrificTrioCakes.Models.DB.Cake

@{
    ViewData["Title"] = "Details";

}

<!DOCTYPE html>
<html lang="en">
<head>
    @*using fontawesome kit for icons styling*@
    <script src="https://kit.fontawesome.com/1269185472.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>


<div class="container product-single">
    <div class="row product-single-header">
        <div class="col-md-6 product-single-image">
            <img style="width: 100%;" src="~/images/@Model.Image" />
        </div>
        <div class="col-md-6 product-single-summary" style="border:0px solid gray">
            <h1>@Html.DisplayFor(model => model.Name)</h1>    
            <h4>@Html.DisplayFor(model => model.Categories.Name) Cake</h4>            
            <p class="desc">@Html.DisplayFor(model => model.Description)</p>                        
            <h6>Ingredients:</h6>
            <p class="list">
                @if (ViewBag.CakeIngredients.Count > 0)
                {
                    @foreach (var ing in ViewBag.CakeIngredients)
                    {
                        <span> @ing </span>
                    }
                }
                else
                {
                    <div>No @Html.DisplayNameFor(Model => Model.CakeIngredients) was found. </div>
                }
            </p>
            <h2>$@Html.DisplayFor(model => model.Price) <span>nzd</span></h2>
            <a asp-controller="Cart" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-primary">Add To Cart</a><br/>

            @*only admin can delete a category*@
                @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm"><i class="fa-regular fa-pen-to-square"></i></a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-trash-can fa-shake"></i></a>
            }
            
        </div>
    </div>
</div>

